{
    "version": "0.2",
    "ignoreWords": [],
    "enableGlobDot": true,
    "ignorePaths": [
        "*.csv",
        "*.c",
        "*.txt",
        "Makefile",
        "tmp/*",
        "*.toml",
        "*.proto",
        "*.h",
        ".git/*",
        ".gitignore",
        ".github/",
        ".circleci/",
        "Cargo.lock",
        "**/**.yaml",
        ".circleci/"
    ],
    "import": [
        "@cspell/dict-rust/cspell-ext.json"
    ],
    "useGitignore": true,
    "caseSensitive": false,
    "language": "en",
    "languageSettings": [
        {
            "languageId": "rust",
            "includeRegExpList": [
                "comments",
                "rust_error_messages",
                "rust_string_format",
            ],
            "ignoreRegExpList": [
                "rustdoc_code_block",
                "rust_item_path",
                "`.*`",
                "\\/[\\w.\\-_]+",
                "[\\w.\\-_]+\\/",
                "pod[a-zA-Z0-9]+",
                "\", .*\"",
                "JWT",
            ]
        },
        {
            "languageId": "markdown",
            "ignoreRegExpList": [
                "markdown_code_block"
            ]
        }
    ],
    "dictionaryDefinitions": [
        {
            "name": "project-words",
            "path": ".cspell/project-words.txt",
            "description": "Words used in this project",
            "addWords": true
        }
    ],
    "dictionaries": [
        "rust",
        "project-words",
        "makefile",
        "en-gb",
        "cpp",
        "cpp-legacy",
        "cpp-refined",
        "networking-terms",
        "python",
        "scala"
    ],
    "patterns": [
        {
            "name": "comment-single-line",
            "pattern": "//.*"
        },
        {
            "name": "comment-multi-line",
            "pattern": "/(?:\\/\\*[\\s\\S]*?\\*\\/)/g"
        },
        {
            "name": "comments",
            "pattern": [
                "comment-single-line",
                "comment-multi-line"
            ]
        },
        {
            "name": "string",
            "pattern": "\".*\""
        },
        {
            "name": "JWT",
            "pattern": "/([A-Za-z0-9+\/]+={0,2}\\.[A-Za-z0-9+\/]+={0,2}\\.[A-Za-z0-9+\/]+={0,2})/g"
        },
        {
            "name": "markdown_code_block",
            "pattern": "^```[\\s\\S]*?^\\s*```/gm"
        },
        {
            // Markdown code block in Rust documentation.
            // NOTE: with /gm it doesn't work!
            "name": "rustdoc_code_block",
            "pattern": "^\\/\\/\\/ ```[\\s\\S]*?^\\/\\/\\/ ```"
        },
        {
            // path::to::item
            "name": "rust_item_path",
            "pattern": "([A-Za-z0-9_]+(::)?)+"
        },
        {
            // .expect("this") or .context("this")
            // See https://github.com/streetsidesoftware/cspell/issues/6080
            // Note that parentheses are automatically excluded by cspell.
            "name": "rust_error_messages",
            "pattern": "(?<=\\.(expect|context|panic!))\\(\".+\"\\)"
        },
        {
            // format!("this") or formatdoc!("this") or indoc!("this")
            "name": "rust-string-format",
            "pattern": "(?<=\\.(format!|formatdoc!|indoc!))\\(\".+\"\\)"
        }
    ]
}